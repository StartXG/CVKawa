{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "cv-kawa",
    "version": "0.0.2"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "protocol": {
        "asset": true,
        "all": true,
        "assetScope": [
          "**"
        ]
      },
      "window": {
        "all": true
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "assets/jtp",
            "sidecar": true,
            "args": [
              "-f",
              {
                "validator": "\\S+"
              },
              "-o",
              {
                "validator": "\\S+"
              },
              "-l",
              {
                "validator": "\\S+"
              }
            ]
          }
        ]
      }
    },
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "CVKawa",
        "width": 1440,
        "height": 820,
        "minWidth": 450,
        "minHeight": 780,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": [
        "dmg",
        "updater"
      ],
      "identifier": "com.tauri.build",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "assets/jtp"
      ]
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://www.cvkawa.com/api/releases/latest"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVFQjI1NDE1QTM3NzU4ODEKUldTQldIZWpGVlN5N3Jzb3FkMDQ0MWpzREpXdnVqcm5mVXF0QmN5T1VHY2NIaDNtQXdHRHlzL0MK",
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
